{
    "name": "infra",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "infra",
    "projectType": "application",
    "tags": [],
    "targets": {
        "install": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["echo 'Skipping, as this one's managed by Nx."],
                "cwd": "infra"
            }
        },
        "format": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["npx prettier --write ."],
                "cwd": "infra"
            },
            "cache": false
        },
        "prep-docs": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "rm -rf dist/docs/publish && mkdir -p dist/docs/publish/sdk",
                    "cp -R dist/docs/typescript dist/docs/publish/sdk/",
                    "cp -R dist/docs/python dist/docs/publish/sdk/",
                    "cp -R dist/docs/ruby dist/docs/publish/sdk/"
                ],
                "parallel": false
            },
            "cache": false
        },
        "preview": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pulumi preview --stack dev"],
                "cwd": "infra"
            },
            "dependsOn": ["prep-docs"],
            "cache": false
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pulumi up --skip-preview --stack dev"],
                "cwd": "infra"
            },
            "dependsOn": ["prep-docs"],
            "cache": false
        }
    }
}
